<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 
        Layer list drawable, contains multiple drawables ordered from back to front
          
    -->
    <item>
        <!-- Define the black rounded rectangle that will act as shadow -->
        <shape 
            android:shape="rectangle">
            
            <corners android:radius="5dp"/>
        
            <gradient
                android:angle="90"
                android:centerColor="#303339"
                android:endColor="#000000"
                android:startColor="#000000" 
                />
        </shape>
        
    </item>

    <item>
        <!-- 
            This is an "inset" drawable, all it does is inset the bottom of the drawable button_shape
            by 5dp, so that it sits above the shadow created in the previous item 
        -->
        
        <inset
            android:drawable="@drawable/button_shape"
            android:insetBottom="3dp"
            android:insetRight="1dp"
            />
        
    </item>
    
</layer-list>
